@model ToyWebsite.Models.Item

@{
    ViewBag.Title = "Product";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="@Url.Content("~/images/" + Model.itemFileName)" class="img-rounded img-responsive" />
        </div>

        <div class="col-md-6 col-md-offset-2">
            <h1 class="text-center">@Model.itemName</h1>
            <div class="row spacer"></div>
            <div class="row">
                <div class="col-md-6 ">
                    <button class="btn-lg btn-primary btn-block" type="submit">
                        <span class="glyphicon glyphicon-shopping-cart"></span>
                        &nbspPlace in Cart
                    </button>
                </div>
                <div class="col-md-6">
                    <h3 class="text-center">$@Model.itemCost</h3>
                </div>
            </div>
            <div class="row spacer"></div>
            <div class="row">
                <div class="col-md-11">
                    <p>
                        @Model.itemDescription
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>