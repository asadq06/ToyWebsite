@model ToyWebsite.Models.User

@{
    ViewBag.Title = "LogIn";
}

<h2>Log In</h2>
<hr />

@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissable" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        @TempData["errorMessage"]
    </div>
}

@using (Html.BeginForm("LogInCheck", "Account"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-1 col-md-offset-3">
                @Html.LabelFor(model => model.userName, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-4">
                @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-4">
                @Html.ValidationMessageFor(model => model.userName, "*", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-1 col-md-offset-3">
                @Html.LabelFor(model => model.userPassword, htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="col-md-4">
                @Html.PasswordFor(model => model.userPassword, new { @class = "form-control" })
            </div>
            <div class="col-md-4">
                @Html.ValidationMessageFor(model => model.userPassword, "*", new { @class = "text-danger" })
            </div>
        </div>


        <div class="checkbox">
            <div class="col-md-1 col-md-offset-3">
                <label style="margin-left:100%">
                    @Html.CheckBox("mergeCarts", true)
                </label>
            </div>
            <div class="col-md-4">
                Keep items from guest cart.
            </div>
        </div>

        <div class="row">
            <div class="form-group">
                <div class="col-md-offset-5 col-md-2">
                    <input type="submit" id="logOnBtn" value="Log In" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}
