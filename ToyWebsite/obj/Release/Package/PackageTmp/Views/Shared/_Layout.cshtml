<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Toy Lot</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <!--

    -->
    <div class="nav-container">
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#a-collapse" aria-expanded="false">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Toy Lot", "Index", "Home", null, new { @class = "navbar-brand"})
                </div>
                <div class="collapse navbar-collapse" id="a-collapse">
                    <ul class="nav navbar-nav navbar-left">
                        @{Html.RenderAction("CategoryDropdown", "Menu");}
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="@Url.Action("Index", "Cart")">
                                Cart&nbsp;
                                <span class="glyphicon glyphicon-shopping-cart"></span>
                                <span class="badge">@{Html.RenderAction("CartQuantity", "Menu");}</span>
                            </a>
                        </li>
                        @{Html.RenderAction("UserOptions", "Menu");}
                    </ul>
                    <div class="row">
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            @using (Html.BeginForm("Index", "Search", FormMethod.Get, new { @class = "navbar-form" }))
                            {
                                <div class="input-group search-bar">
                                    <input type="text" id="searchString" name="searchString" placeholder="Search" class="form-control">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="submit">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </button>
                                    </span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
</body>
</html>