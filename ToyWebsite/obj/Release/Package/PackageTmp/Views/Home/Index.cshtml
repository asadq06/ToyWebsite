@using ToyWebsite.Models
@model List<Item>
@{
    ViewBag.Title = "Home Page";
}
<h2>
    Popular
</h2>
<hr/>

<div class="row">
    @for (var x = 0; x < 2; x++)
    {
        foreach (Item i in Model)
        {
            <div class="col-sm-2">
                <a href="@Url.Action("Item", "Product", new { anItemID = i.itemID })" class="thumbnail">
                    <img src="@Url.Content("~/images/" + i.itemFileName)" class="img-rounded img-square" />
                </a>
                <label>@i.itemName</label>
            </div>
        }
    }

</div>

<script type="text/javascript">

    function makeImageSquare() {
        $('.img-square').each(function () {
            width = $(this).width();
            $(this).css("height", width);
        })
    }

    $(window).on({
        load: makeImageSquare,
        resize: makeImageSquare
    });

</script>