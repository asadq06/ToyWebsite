@model ToyWebsite.Models.Item

@{
    ViewBag.Title = "Product";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src="@Url.Content("~/images/" + Model.itemFileName)" class="img-rounded img-responsive" />
        </div>

        <div class="col-md-6 col-md-offset-2">
            <h1 class="text-center">@Model.itemName</h1>
            <div class="row spacer"></div>
            <div class="row">
                <div class="col-md-7 ">
                    @{Html.RenderAction("CartStatus", "Product", new { anItemID = Model.itemID });}
                </div>
                <div class="col-md-5">
                    <h3 class="text-center">$@Model.itemCost.ToString("0.00")</h3>
                </div>
            </div>
            <div class="row spacer"></div>
            <div class="row">
                <div class="col-md-11">
                    <p>
                        @Model.itemDescription
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>