@using ToyWebsite.Models
@model List<Category>

<li class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        Categories
        <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
        @foreach (Category c in Model)
        {
            if (c.item.Count() > 0)
            {
                <li><a href="@Url.Action("Category", "Product", new { aCategoryID = c.categoryID })">@c.categoryName</a></li>
            }
            else { 
                <li class="disabled"><a href="#">@c.categoryName</a></li>
            }
        }
    </ul>
</li>
